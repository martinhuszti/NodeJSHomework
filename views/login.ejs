<%- include('accessories/header') %>
<%- include('accessories/navbar_out') %>

<div class="container" style="margin-top: 1em;"><h1>Bejelentkezés</h1>
    <form method="POST">

        <div class="form-group">
            <label class="form-label active" for="formBasicEmail">Felhasználónév</label>
            <input name="username" autocomplete="username" class="form-control" placeholder="Felhasználónév">
        </div>

        <div class="form-group">
            <label class="form-label active">Jelszó</label>
            <input autocomplete="password" class="form-control" placeholder="Password" type="password" name="password">
        </div>

        <input class="btn btn-primary" type="submit" value="Bejelentkezés"/>
    </form>

    <form method="POST" action="/forgetpassword">
        <button class="btn btn-secondary" type="submit"> Elfelejtett jelszó</button>
        <input name="username" autocomplete="username" class="form-control" placeholder="Felhasználónév">
    </form>

    <form action="/newuser">
        <button class="btn btn-warning" type="submit"> Regisztráció</button>
    </form>

    <%- include('accessories/errorbox') %>
</div>
<%- include('accessories/footer') %>

