<%- include('accessories/header') %>
<%- include('accessories/navbar_out') %>
<div class="container">
    <h1 style="margin-top: 1em;">Regisztráció</h1>
    <form method="post" action="newuser">

        <div class="form-group">
            <label class="form-label" for="formNickname">Felhasználónév</label>
            <input name="username" autocomplete="text" class="form-control" placeholder="Név" required type="text">
            <small class="text-muted form-text">Ez fog megjelenni a termékek alatt</small>
        </div>

        <div class="form-group">
            <label class="form-label active" for="formBasicPassword">Jelszó</label>
            <input name="password" autocomplete="password" class="form-control" placeholder="Jelszó" required
                   type="password">
            <small class="text-muted form-text">Ez lesz a jelszavad</small>
        </div>

        <button class="btn btn-primary" type="submit">Regisztáció</button>

    </form>
    <div class="red-text center"></div>
</div>
<%- include('accessories/footer') %>
